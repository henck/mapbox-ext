{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "skipLibCheck": true
  },
  "typedocOptions": {
    "entryPointStrategy": "expand",
    "entryPoints": ["src/controls/*", "src/modules/*"],
    "out": "docs",
    "theme": "default",
    "excludePrivate": true,
    "excludeExternals": true,
    "externalPattern": "**/node_modules/**",
    "categorizeByGroup": false
  },
  "include": [
    "src/**/**/*"
  ]
}
